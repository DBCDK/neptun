case "$1" in
    docker)
        echo "### building neptun docker ###"
        if [[ ! -z "$BUILD_NUMBER" ]];
        then
            docker build . --pull --no-cache -t docker-io.dbc.dk/neptun-service:${BRANCH_NAME}-${BUILD_NUMBER} || exit 1
        else
            docker build . -t docker-io.dbc.dk/neptun-service:devel || exit 1
        fi
        ;;

    *)
        echo "### building neptun project ###"
        echo "### Look for build artifacts in target/ ###"

        mvn package -Dmaven.test.skip=true || exit 1
        ;;
esac
